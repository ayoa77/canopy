<!-- We can add erb to grab each featured drink and place/style them to match
the style on the first feature. -->

<div id="featurette">
  <div class="container">
    <% if @products.count >= 4 %>
    <div class="row">

<%= link_to spree.product_path(@featured_one) do %>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <div class="juice">

          <img src="/assets/bottle.png" />

          <p class="productName">
              <!-- erb to grab featured product name -->
              <%=@featured_one.name %>
            </p>

          <p class="ingredients">
              <!-- erb to grab featured product ingredients -->
              <%=@featured_one.description%>
            </p>

          <p class="productPrice">
              $<%=@featured_one.price.to_i%>
