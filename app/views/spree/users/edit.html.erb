
<!-- ajhelp : need to edit this to include editable fields for shipping address and phone number -->
<div class="col-md-6 col-md-offset-3">
  <div class="change-me">
    <div class="change-me-2">
      <p class="change-me-3"><%= Spree.t(:editing_user) %></p>
    </div>
    <div class="change-me-4">
      <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>

      <%= form_for Spree::User.new, :as => @user, :url => spree.user_path(@user), :method => :put do |f| %>
      <fieldset id="password-credentials">
        <div class="form-group">
          <%= f.email_field :email, :class => 'form-control', :placeholder => Spree.t(:email) %>
        </div>
        <%= f.fields_for :ship_address do |address_fields| %>
        <p class="change-me-3"><%= Spree.t(:phone_number) %></p>
        <div class="form-group">
          <%= address_fields.telephone_field :phone, :class => 'form-control', :style => 'margin-bottom: 35px;' %>
        </div>
        <p class="change-me-3"><%= Spree.t(:name) %></p>
        <div class="form-group">
          <%= address_fields.text_field :firstname, :class => 'form-control', :style => 'margin-bottom: 15px;' %>
          <%= address_fields.text_field :lastname, :class => 'form-control', :style => 'margin-bottom: 35px;' %>
        </div>
        <p class="change-me-3"><%= Spree.t(:address) %></p>
        <div class="form-group">
          <%= address_fields.text_field :address1, :class => 'form-control', :style => 'margin-bottom: 15px;' %>
          <%= address_fields.text_field :address2, :class => 'form-control', placeholder: Spree.t(:address2), :style => 'margin-bottom: 15px;' %>
          <%= address_fields.text_field :city, :class => 'form-control', :style => 'margin-bottom: 15px;'%>
          <%= address_fields.text_field :zipcode, :class => 'form-control', :style => 'margin-bottom: 35px;'%>
        </div>
          <%end%>
        <p class="change-me-3"><%= Spree.t(:confirm) %></p>
        <div class="form-group">
          <%= f.password_field :password, :class => 'form-control', :placeholder => Spree.t(:password) %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => Spree.t(:confirm_password) %>
        </div>
      </fieldset>
      <div data-hook="signup_below_password_fields"></div>

        <hr />

        <p>
          <%= f.submit Spree.t(:update), :class => 'ghost-button-green' %>
        </p>
        <% end %>
    </div>
  </div>
</div>
